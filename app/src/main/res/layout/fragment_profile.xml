<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context=".ProfileFragment"
    style= "@style/GeneralTheme">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20sp"/>

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="137dp"
        android:layout_height="120dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20sp"/>

    <TextView
        android:id="@+id/email_title"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emailTitle" />


    <TextView
        android:id="@+id/email"
        style="@style/TextBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20sp"/>

    <TextView
        android:id="@+id/name_title"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usernameTitle" />


    <TextView
        android:id="@+id/username"
        style="@style/TextBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20sp"/>


    <Button
        style="@style/ButtonText"
        android:id="@+id/btn_addFriends"
        android:text="@string/add_friends"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16sp"/>

    <Button
        style="@style/ButtonText"
        android:id="@+id/btn_acceptFriends"
        android:text="@string/accept_friend_requests"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16sp"/>

    <Button
        style="@style/ButtonText"
        android:id="@+id/btn_listFriends"
        android:text="@string/friend_list"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16sp"/>

    <Button
        android:text="@string/logout"
        android:id="@+id/btn_logout"
        style="@style/ButtonText"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>