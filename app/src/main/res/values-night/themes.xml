        <item name="colorSurfaceVariant">@color/d_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/d_on_surface_variant</item>
        <!-- Outline -->
        <item name="colorOutline">@color/d_outline</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurfaceVariant</item>


